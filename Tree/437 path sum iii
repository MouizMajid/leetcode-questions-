/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public int pathSum(TreeNode root, int targetSum) {
        if(root == null){
            return 0; 
        }

        return pathsFromNode(root, targetSum) + pathSum(root.left, targetSum)+ pathSum(root.right, targetSum); 
    }


    private int pathsFromNode(TreeNode node, long remaining){
        if(node == null){
            return 0;
        }
        int pathHere = 0;
        if(node.val == remaining){
            pathHere = 1; 
        }
        return pathHere+pathsFromNode(node.left, remaining-node.val)+pathsFromNode(node.right, remaining-node.val);  
            }
}